{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [],
    "paths": {},
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["lib", "node_modules", "rollup.config.js"],
  "include": ["./src"]
}
